{
  "root": true,
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "no-console": 1,
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "no-var": 2,
    "prefer-arrow-callback": "error",
    "object-curly-spacing": [
      "error",
      "always"
    ]
  },
  "plugins": [
    "html"
  ],
  "settings": {
    "html/html-extensions": [
      ".html",
      ".riot"
    ]
  },
  "globals": {
    "opts": true,
    "observable": true,
    "route": true
  }
}
